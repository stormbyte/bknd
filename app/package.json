    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "tsc-alias": "^1.8.11",
    "tsup": "^8.4.0",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "wouter": "^3.6.0"
  },
  "optionalDependencies": {
    "@hono/node-server": "^1.13.8"
  },
  "peerDependencies": {
    "react": "^19.x",
    "react-dom": "^19.x"
